void intref(ref int a)
{
	a = 13;
}

void floatref(ref float a)
{
	a = 1.3;
}

void stringref(ref string a)
{
	a = "13";
}

struct S {
	ref int a;
};

int main()
{
	int i;
	intref(i);
	assert(i == 13);

	int a;
	ref int ra;
	ref int rb;
	assert(ra === NULL);
	ra <- a;
	rb <- ra;
	assert(ra === rb);
	assert(rb !== NULL);
	rb = 1;
	assert(a == 1);
	assert(ra == 1);
	rb <- NULL;
	assert(rb === NULL);

	float f;
	floatref(f);
	assert(f == 1.3);

	string s;
	stringref(s);
	assert(s == "13");

	string ss;
	ref string rs = ss;
	ref string rt;
	assert(rt === NULL);
	rt <- rs;
	assert(rs === rt);
	rt = "1";
	assert(rs === rt);
	assert(rt !== NULL);
	assert(ss == "1");
	assert(rs == "1");
	assert(rs.Length() == 1);

	S obj;
	obj.a <- a;
	assert(obj.a === ra);
	obj.a <- NULL;
	assert(obj.a === NULL);

	return 0;
}
