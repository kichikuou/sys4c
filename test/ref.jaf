void intref(ref int a)
{
	a = 13;
}

void floatref(ref float a)
{
	a = 1.3;
}

void stringref(ref string a)
{
	a = "13";
}

int main()
{
	int i;
	intref(i);
	assert(i == 13);

	int a;
	ref int ra;
	ref int rb;
	assert(ra === NULL);
	ra <- a;
	rb <- ra;
	assert(ra === rb);
	assert(NULL !== rb);
	rb = 1;
	assert(a == 1);
	assert(ra == 1);

	float f;
	floatref(f);
	assert(f == 1.3);

	string s;
	stringref(s);
	assert(s == "13");

	string ss;
	ref string rs;
	ref string rt;
	assert(rs === NULL);
	rs <- ss;
	rt <- rs;
	assert(rs === rt);
	rt = "1";
	assert(rs === rt);
	assert(NULL !== rt);
	assert(ss == "1");
	assert(rs == "1");
	assert(rs.Length() == 1);

	return 0;
}
